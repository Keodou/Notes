@model Note

<form class="form-control" asp-controller="Home" asp-action="Create" method="post">
    <input type="hidden" asp-for="UserId" />
    <h1 class="text-center">Обновить данные</h1>
    <div>
        <label class="form-label" asp-for="Head">Название</label>
        <p><input class="form-control" type="text" asp-for="Head" /></p>
        <span class="text-danger" asp-validation-for="Head"></span>
    </div>
    <div>
        <label class="form-label" asp-for="Head">Содержание</label>
        <p><input class="form-control" type="text" asp-for="Text" /></p>
        <span class="text-danger" asp-validation-for="Text"></span>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Сохранить" />
    </div>
</form>